<div id="root" style="position: absolute;left: 0px;top: 0px;width: 100vw;height: 100vh;background-position: center;background-size: cover;overflow: hidden;">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'RedirectButton' %}
        {% include 'common.redirectbutton' %}
      {% when 'Image' %}
        {% include 'common.image' %}
      {% when 'ResizeTextarea' %}
        {% include 'common.resizetextarea' %}
      {% when 'Scrollbar' %}
        {% include 'common.scrollbar' %}
      {% when 'Toggles' %}
        {% include 'common.toggles2' %}
      {% when 'ProductModule' %}
        {% include 'product.productmodule' %}
      {% when 'ProductMediaModule' %}
        {% include 'product.productmediamodule' %}
      {% when 'ProductDescriptionModule' %}
        {% include 'product.productdescriptionmodule' %}
      {% when 'ProductDetailsModule' %}
        {% include 'product.productdetailsmodule' %}
    {% endcase %}
  {% endfor %}
</div>

<script>
  function UpdateBGActivate () {
    if (deviceType == "pc" || deviceType == "tablet") {
      function doStuff () {
        document.body.removeEventListener('mousemove',doStuff);
        let root = document.getElementById("root");
        if (root.dataset.togglebgon != "false") {
          root.style.backgroundImage = 'url({{ "common.bg.gif" | asset_url }})';
        }
      }
      document.body.addEventListener('mousemove', doStuff);
    } else if (deviceType == "phone") {
      window.setTimeout(()=>{
        let root = document.getElementById("root");
        if (root.dataset.togglebgon != "false") {
          root.style.backgroundImage = 'url({{ "common.bg.gif" | asset_url }}?width=1024)';
        }
      },1);
    }
  }
  window.aaron.common.modulebasics.ActivateFuncs.push(UpdateBGActivate);
</script>

